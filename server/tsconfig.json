{
    "include" : [
        "src/**/*"
    ],
    "compilerOptions": {
        "baseUrl": "src",
        "noImplicitAny": true,
        "target": "es5",
        "sourceMap": true,
        "declaration": false,
        "moduleResolution": "node",
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "outDir": "dist",
        "typeRoots": [
            "node_modules/@types"
        ],
        "lib": [
            "es2016",
            "dom"
        ],
        "types": []
    }
}
